pipeline {
  environment {
    registry = "komalsingh54/user-management"
    registryCredential = 'docker-hub'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning our Git') {
      steps {
        git 'https://github.com/komalsingh54/training-tool.git'
      }
    }
    stage('Building our image') {
      steps{
        dir('user-management') {
          sh 'yarn install'
          sh 'yarn docker:build'
        }
      }
    }
    stage('push image') {
      steps{
        dir('user-management') {
          sh  "docker tag $registry $registry:$BUILD_NUMBER"
          sh "docker login --username komalsingh54 --password @singhisking"
          sh  "docker push $registry:$BUILD_NUMBER"
        }
      }
    }
    stage('Cleaning up') {
      steps {
        dir('user-management') {
          sh "docker rmi $registry:$BUILD_NUMBER"
          script {
            cleanWs deleteDirs: true
          }
        }
      }
    }
  }
}
